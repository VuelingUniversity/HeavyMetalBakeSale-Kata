@model HeavyMetalBakery.MVC.ViewModels.BakeViewModel

@{
    ViewBag.Title = "ShoppingCartView";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Shopping Cart</h2>

<table style="width:500px">
    <tr>
        <th>Sort</th>
        <th>Price</th>
        <th>Quantity</th>
    </tr>
    @foreach (var bake in Model.Bakes)
    {
        <tr>
            <td>@bake.Sort</td>
            <td>@bake.Price</td>
            <td>@bake.Quantity</td>
        </tr>
    }
</table>
<br />
<input type="button" value="Buy" onclick=""  />

