@model HeavyMetalBakery.MVC.ViewModels.OrderViewModel

@{
    ViewBag.Title = "ShoppingCartView";
Layout = "~/Views/Shared/_Layout.cshtml";
}



<h2>Shopping Cart</h2>

<table style="width:500px">
    <tr>
        <th>Sort</th>
        <th>Price</th>
        <th>Quantity</th>
    </tr>
    @foreach (var item in Model.Order.OrderItems)
    {
        <tr>
            <td>@item.ItemId</td>
            <td>@item.BasePrice</td>
            <td>@item.Amount</td>
        </tr>
    }
<tr>
    <td></td>
    <td></td>
    <td>Total: @Model.Order.AmountToPay</td>
    <td><input type="button" value="Buy" onclick="" /></td>
</tr>
</table>
<br />
