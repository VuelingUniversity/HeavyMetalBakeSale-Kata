@model MetalBandBakery.MVC.Models.Recipe
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";

}
<table class="table">
    <tr>
        <td>@Model.ItemId</td>
        <td>Quantity</td>
        <td>Action</td>
        <td>Extra: @Html.TextBoxFor(model => Model.Extra)</td>
    </tr>

    @for (int i = 0; i < Model.Ingredients.Count; i++)
     {
         <tr>
             <td>
                 @Model.Ingredients.ElementAt(i).Key
             </td>
             <td>
                 @Html.TextBoxFor(model => model.Ingredients.ElementAt(i).Value)
             </td>
             <td>
                 @Html.ActionLink("Save", "SetRecipeBake", "Recipe",
                     new
                     {
                         itemId = Model.ItemId,
                         ingredientId = Model.Ingredients.ElementAt(i).Key,
                         ingredientQuantity = Model.Ingredients.ElementAt(i).Value,
                         extra = Model.Extra
                     }, new { @class = "btn btn-primary" })
             </td>
         </tr>
     }
</table>